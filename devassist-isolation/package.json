{
  "name": "smart-devassist-isolation",
  "version": "0.1.0",
  "description": "Smart DevAssist Isolation - Intelligent project-specific assistance with automatic subagent detection",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src lib subagents",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js"
  },
  "keywords": [
    "devassist",
    "mcp",
    "ai-assistance",
    "project-isolation",
    "subagents"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "lib/**/*.js",
      "subagents/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}